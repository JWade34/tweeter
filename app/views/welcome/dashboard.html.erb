<h1>Welcome <%= @current_user.name %></h1>

<hr/>

<h2>You are following: </h2>

<% @current_user.all_following.each do |user| %>
  <li><%= user.name %> - <%= link_to "unfollow", stop_following_path(user_id: user.id), method: :post, class: "btn btn-danger", data: {confirm: "Really stop following the super awesome tweets from #{user.name}?"} %> </li>
<% end %>


<h2>All Users</h2>

<% @users.each do |user| %>
  <li><%= user.name %> -
    <% if @current_user.following?(user) %>
    <% else %>
      <%= link_to "follow", start_following_path(user_id: user.id), method: :post, class: "btn btn-default"%>
    <% end %>
    </li>
<% end %>
