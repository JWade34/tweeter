<div class="container">
<h1>Please sign in</h1>

<%= form_tag authenticate_session_path do %>
  <div>
    <%= label_tag :name %><br/>
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :password %><br/>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Sign in" %>
  </div>

<% end %>

  <p> - or - <p>
  <%= link_to "Sign Up" %>

</div>
